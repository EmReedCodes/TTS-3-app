<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Word Bank</title>
  

  <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css" />
  <link href="https://fonts.googleapis.com/css2?family=Lexend&display=swap" rel="stylesheet" />
  <script src="https://kit.fontawesome.com/ddd77854d8.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container holdBoth">
        <div class="row">
          <div class="speakbank doubleColumn">
            <div class="word">Hit Next</div>
            <div class="buttonGrp">
              <button type="submit" class="wordNew confirmBtn">Next</button>
              <button class="wordRate confirmBtn">Repeat</button>
              <input
                type="range"
                min="0.2"
                max="1"
                value="1"
                step="0.2"
                class="slider"
                id="SpeachRateSlider"
                list="steplist"
              />
              <datalist id="steplist">
                <option>0</option>
                <option>25</option>
                <option>50</option>
                <option>75</option>
                <option>100</option>
            </datalist>
            </div>
          </div>
    
          <div class="workbank bankBox column">
            <div class="inputWords">
              <h2>Word Bank</h2>
              <form action="/" method="POST">
               <div class="wordInput">
                <input type="text" class="text-input" name="content" id="content" />
                <button type="text" class="confirmBtn">Submit</button>
              </div>
              </form>
            </div>
            <div class="editWords">
    
          <ul>
            <% wordBank.forEach((details,idx) => { %>
            <!-- creating an LI for each instance -->
            <%if (idx < 10) { %>
            <li class="bankList">
              <!-- details.content is the word being posted and sent to db -->
              <!-- can add the edit and delete function just want basics to work -->
              <!-- <a href="/edit/<%= details._id %>" class="edit"> -->
                
                <div class="buttons">
                  <a onClick="edit('<%= details._id %>', event)" class="edit">
                    <span class="fa-solid fa-pen-to-square" role="img" aria-label="Edit"></span>
                  </a>
                  <a onClick="save('<%= details._id %>', event)" class="save">
                    <span class="fa-solid fa-save" role="img" aria-label="Save"></span>
                  </a>
                  <a onClick="remove('<%= details._id %>', event)" class="remove">
                    <span class="fa-solid fa-trash-can" role="img" aria-label="Delete"></span>
                  </a>
                </div>
                <div class="content"><%= details.content %></div>
                <!-- didnt have my closing a? -->
                <!-- </a> -->
            </li>
            <% } %>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
    </div>
 
    
  <script src="/static/main.js"></script>

</body>
</html>
